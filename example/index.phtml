<script>
$(function() {

    $('.tagManager1').tagManager({
        prefilled: ['seven', 'eight'],
        capitalizeFirstLetter: true,
        preventSubmitOnEnter: true,
        typeahead: {
            autoselect: true,
            source: ['one', 'two', 'three', 'four', 'five', 'six'],
            suppressKeyPressRepeat: true,
            updater: function(tag) {
                this.$element.trigger('addTag', [ tag ]);
            }
        },
        delimeters: [44, 188, 13],
        backspace: [8],
        tagValuesFieldName: 'hiddenTagListA',
        strategy: 'csv'
    });

    $('.tagManager2').tagManager({
        prefilled: ['abc', 'def'],
        capitalizeFirstLetter: true,
        preventSubmitOnEnter: true,
        typeahead: {
            autoselect: true,
            source: ['ghi', 'jkl', 'mno', 'pqr', 'stu', 'vwx'],
            suppressKeyPressRepeat: true,
            updater: function(tag) {
                this.$element.trigger('addTag', [ tag ]);
            }
        },
        delimeters: [44, 188, 13],
        backspace: [8],
        ajaxAdd: 'http://localhost/tag/add',
        ajaxDelete: 'http://localhost/tag/delete',
        strategy: 'array',
        tagValuesFieldName: 'tags[]'
    });

    $('.tagManager3').tagManager({
        prefilled: ['abc', 'def'],
        capitalizeFirstLetter: true,
        preventSubmitOnEnter: true,
        typeahead: {
            autoselect: false,
            source: ['ghi', 'jkl', 'mno', 'pqr', 'stu', 'vwx'],
            suppressKeyPressRepeat: true,
            updater: function(tag) {
                this.$element.trigger('addTag', [ tag ]);
            }
        },
        delimeters: [44, 188, 13],
        backspace: [8],
        strategy: 'ajax',
        ajaxAdd: 'http://localhost/tag/add',
        ajaxDelete: 'http://localhost/tag/delete'
    });

});
</script>

